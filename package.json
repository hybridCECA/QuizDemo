{
  "name": "quiz",
  "version": "1.0.0",
  "description": "2021 Code Intern Web Quiz",
  "main": "index.js",
  "scripts": {
    "watch:sass": "sass --watch sass/main.scss css/style.css",
    "build:css": "sass sass/main.scss css/style.css && postcss --use autoprefixer -b 'last 10 versions' css/style.css --output=hosting/style.css",

    "devserver": "live-server",
    "start": "npm-run-all --parallel devserver watch:sass"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.2.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.4",
    "postcss-cli": "^8.3.1",
    "sass": "^1.26.10"
  }
}
